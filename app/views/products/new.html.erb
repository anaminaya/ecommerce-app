<section>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="product_single">
            <h1>Create a new product:</h1>

              <% if @products.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@products.errors.count, "error") %> prohibited this product from being saved:</h2>
                    <ul>
                    <% @products.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %> %>

            <%= form_tag '/products', method: :post do %>

              <div>
                <%= label_tag :name %>
                <%= text_field_tag :name, @products.name %>
              </div>

              <div>
                <%= label_tag :price %>
                <%= text_field_tag :price, @products.price %>
              </div>

              <div>
                <%= label_tag :image %>
                <%= text_field_tag :image %>
              </div>

              <div>
                <%= label_tag :description %>
                <%= text_field_tag :description, @products.description %>
              </div>

              <%= submit_tag "Create product", class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
